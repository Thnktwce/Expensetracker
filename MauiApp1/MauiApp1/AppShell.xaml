<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MauiApp1.Views"
       x:Class="MauiApp1.AppShell">

    <TabBar>
        <ShellContent Title="Главная"
                      ContentTemplate="{DataTemplate views:MainPage}"
                      Route="Главная" />
        <ShellContent Title="Расходы"
                      ContentTemplate="{DataTemplate views:ExpensesPage}"
                      Route="Расходы" />
        <ShellContent Title="Доходы"
                      ContentTemplate="{DataTemplate views:IncomePage}"
                      Route="Доходы" />
    </TabBar>
</Shell>
