<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.AddIncomePage">
    <StackLayout Padding="10">
        <Entry x:Name="TitleEntry" Placeholder="Название" />
        <Entry x:Name="AmountEntry" Placeholder="Сумма" Keyboard="Numeric" />
        <Editor x:Name="CommentEditor" Placeholder="Комментарий" />
        <DatePicker x:Name="DatePicker" />
        <Button Text="Сохранить" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>