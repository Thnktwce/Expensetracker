<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.IncomePage"
             Title="Доходы">

    <StackLayout Padding="10">
        <Button Text="Добавить доход" Clicked="OnAddIncomeClicked" />
        <CollectionView x:Name="IncomeCollection" Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="0,5">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontSize="16" FontAttributes="Bold" />
                            <Label Text="{Binding Amount, StringFormat='Сумма: {0:C}'}" />
                            <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" />
                            <Label Text="{Binding Comment}" FontAttributes="Italic" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
