<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.AddExpensePage">

    <StackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="Название расхода" />
        <Entry x:Name="AmountEntry" Placeholder="Сумма расхода" Keyboard="Numeric" />
        <DatePicker x:Name="DatePicker" />
        <Editor x:Name="DescriptionEditor" Placeholder="Описание" />
        <Editor x:Name="CommentEditor" Placeholder="Комментарий" />
        <Button Text="Сохранить" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
