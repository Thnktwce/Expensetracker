<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.IncomePage"
             Title="Доходы">
    <!-- Используем ScrollView для прокрутки содержимого -->
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <!-- Кнопка для добавления дохода -->
            <Button Text="Добавить доход" Clicked="OnAddIncomeClicked" />

            <!-- Список доходов -->
            <CollectionView x:Name="IncomeCollectionView" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Amount, StringFormat='Сумма: {0:C}'}"/>
                                <Label Text="{Binding Description, StringFormat='Описание: {0}'}"/>
                                <Label Text="{Binding Comment, StringFormat='Комментарий: {0}'}"/>
                                <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}"/>
                                <HorizontalStackLayout>
                                    <Button Text="Редактировать" Clicked="OnEditIncomeClicked"/>
                                    <Button Text="Удалить" Clicked="OnDeleteIncomeClicked"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
