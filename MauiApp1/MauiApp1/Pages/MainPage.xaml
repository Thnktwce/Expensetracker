<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.MainPage">

    <StackLayout Padding="20">
        <Label Text="Общие расходы" FontSize="24" HorizontalOptions="Center"/>
        <Label x:Name="TotalExpenseLabel" FontSize="18" HorizontalOptions="Center"/>

        <Button Text="Добавить расход" Clicked="OnAddExpenseClicked"/>
        <CollectionView x:Name="ExpenseListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontAttributes="Bold"/>
                        <Label Text="{Binding Amount, StringFormat='Сумма: {0:C}'}"/>
                        <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}"/>
                        <Label Text="{Binding Comment}" FontAttributes="Italic"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
