<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.MainPage">
    <StackLayout Padding="10">
        <!-- Лейбл для общей суммы расходов -->
        <Label x:Name="TotalExpensesLabel" FontSize="Large" HorizontalOptions="Center" />

        <!-- Кнопки для перехода на страницы расходов и доходов -->
        <Button Text="Перейти к расходам" Clicked="OnViewExpensesClicked" />
        <Button Text="Перейти к доходам" Clicked="OnViewIncomesClicked" />

        <!-- Лейбл для общей суммы доходов -->
        <Label x:Name="TotalIncomesLabel" FontSize="Large" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
