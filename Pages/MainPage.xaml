<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expensetracker.Views.MainPage"
             Title="Финансовый трекер">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Настройки"
                     Clicked="OnSettingsClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="⚙"
                                 Color="{StaticResource PrimaryAccent}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Сводка" Style="{StaticResource Headline}" HorizontalOptions="Center"/>

            <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                    Stroke="Transparent"
                    Padding="15" Margin="0,10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#000000" Opacity="0.1" Radius="20" Offset="0,5"/>
                </Border.Shadow>

                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="8">
                    <Label Grid.Row="0" Grid.Column="0" Text="Доходы:" Style="{StaticResource Body}"/>
                    <Label x:Name="TotalIncomesLabel" Grid.Row="0" Grid.Column="1" Text="+0.00" FontSize="18" TextColor="{StaticResource IncomeColor}" FontAttributes="Bold"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Расходы:" Style="{StaticResource Body}"/>
                    <Label x:Name="TotalExpensesLabel" Grid.Row="1" Grid.Column="1" Text="-0.00" FontSize="18" TextColor="{StaticResource ExpenseColor}" FontAttributes="Bold"/>
                </Grid>
            </Border>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,15">

                <Button Grid.Column="0" 
            Text="Добавить доход" 
            Clicked="OnAddIncomeClicked" />

                <Button Grid.Column="1" 
            Text="Добавить расход" 
            Clicked="OnAddExpenseClicked" />

            </Grid>

            <BoxView HeightRequest="1" Color="{StaticResource SeparatorColor}" Margin="0,5"/>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Все доходы" Clicked="OnViewIncomesClicked" Style="{StaticResource SecondaryButton}" />
                <Button Text="Все расходы" Clicked="OnViewExpensesClicked" Style="{StaticResource SecondaryButton}"/>
            </HorizontalStackLayout>

            <Button Text="Показать аналитику" Clicked="OnViewChartsClicked" HorizontalOptions="Center" Style="{StaticResource SecondaryButton}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>