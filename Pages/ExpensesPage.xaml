<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expensetracker.Views.ExpensesPage"
             Title="Расходы">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить"
                     Clicked="OnAddExpenseClicked" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="expensesCollectionView"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" CornerRadius="5" BorderColor="LightGray">
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">

                        <Label Grid.Column="0" Grid.Row="0"
                               Text="{Binding Name}"
                               FontSize="16"
                               FontAttributes="Bold" />

                        <Label Grid.Column="1" Grid.Row="0"
                               Text="{Binding Amount, StringFormat='-{0:F2}'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Red" />

                        <Label Grid.Column="0" Grid.Row="1"
                               Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}"
                               FontSize="12"
                               TextColor="Gray" />

                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>