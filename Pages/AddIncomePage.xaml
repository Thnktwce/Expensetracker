<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expensetracker.Views.AddIncomePage"
             Title="Добавить / Редактировать доход">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Entry x:Name="NameEntry" Placeholder="Наименование" />
            <Entry x:Name="AmountEntry" Placeholder="Сумма" Keyboard="Numeric" />
            <Editor x:Name="DescriptionEditor" Placeholder="Описание" />
            <Editor x:Name="CommentEditor" Placeholder="Комментарий" />
            <DatePicker x:Name="DatePicker" />
            <Button Text="Сохранить" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
